<p id="notice"><%= notice %></p>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Added by</th>
    <th colspan="3">Votes</th>
  </tr>
  </thead>
  <tbody>

  <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item.url, :target => "_blank" %></td>
        <td><%= item.description %></td>
        <td><%= item.user.email %></td>
        <td><%= item.plusminus %></td>
        <% unless current_user.voted_on?(item) %>
        <td style="width: 25px;">
          <%= button_to('+1', vote_up_item_path(item), :class => "btn btn-mini btn-success", :form_class => "form-inline form-vote") %>
        </td>
        <td style="width: 25px;">
          <%= button_to('-1', vote_down_item_path(item), :class => "btn btn-mini btn-danger", :form_class => "form-inline form-vote") %>
        </td>
        <% else %>
          <td style="width: 25px;"></td>
          <td style="width: 25px;"></td>
        <% end %>
        <!-- <td><%= link_to 'Show', item %> <%= link_to 'Edit', edit_item_path(item) %> <%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td> -->
      </tr>
  <% end %>
  </tbody>
</table>

<br/>

