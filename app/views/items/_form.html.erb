<%= form_for [@itemgroup, @item] do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :cols => "30", :rows => "10" %>
  </div>
  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :itemgroup_id, "Group" %>
    <%= f.select "itemgroup_id", Itemgroup.all.collect{|t|[t.name,t.id]}, :selected => params[:itemgroup_id] %>
  </div>
  <!-- <div class="field">
    <%= f.label :archived %>
    <%= f.check_box :archived %>
  </div> -->
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>